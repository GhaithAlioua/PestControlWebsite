---
import { navbarItems, servicesSubItems, logo } from "./navbarItems.astro";
import LanguageSelector from "./languageSelector.astro";
---

<style>
    nav {
        background-color: white;
        padding: 0 1rem;
        transition: height 0.3s ease;
        position: fixed;
        width: 100%;
        top: 0;
        z-index: 1000;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    nav .logo {
        height: 80px;
        width: 180px;
        margin-left: 60px;
        transition: all 0.5s ease;
    }

    nav .logo.logo-scrolled {
        height: 60px;
        width: auto;
    }

    nav.scrolled {
        height: 75px;
    }

    nav .nav-items {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-grow: 1;
        margin-right: 100px;
    }

    nav .nav-items a {
        margin: 0 0.8rem;
        text-decoration: none;
        color: black;
        font-size: 1.0rem;
        transition: all 0.3s ease;
        font-family: 'Roboto', sans-serif;
    }

    nav .nav-items a.active {
        color: #10B981;
    }

    nav .nav-items a:hover {
        color: #10B981;
    }

    @media (min-width: 1024px) {
        nav {
            height: 105px;
        }

        nav .logo {
            height: 90px;
            width: auto;
        }
    }


    @media (min-width: 641px) and (max-width: 1024px) {
        nav {
            height: 85px;
        }

        nav .logo {
            height: 70px;
            width: auto;
        }

        nav .nav-items {
            display: none;
        }
    }


    @media (max-width: 640px) {
        nav {
            height: 75px;
        }
        
        nav .logo {
            height: 60px;
            width: auto;
        }

        nav .nav-items {
            display: none;
        }
    }
</style>



<nav id="navbar">
    <a href="/">
        <img class="logo" src={logo.src} alt="Logo" draggable="false"/>
    </a>
    <div class="nav-items">
        {navbarItems.map(item => (
            <a href={item.link}>{item.name}</a>
        ))}
    </div>
    <LanguageSelector />
</nav>



<script type="text/javascript">
    window.addEventListener('scroll', function() {
        const navbar = document.getElementById('navbar');
        const logo = document.querySelector('.logo');
        if (navbar && logo) {
            if (window.innerWidth >= 992) {
                if (window.scrollY > 0) {
                    navbar.classList.add('scrolled');
                    logo.classList.add('logo-scrolled');
                } else {
                    navbar.classList.remove('scrolled');
                    logo.classList.remove('logo-scrolled');
                }
            }
        }
    });

    window.addEventListener('resize', function() {
        const navbar = document.getElementById('navbar');
        const logo = document.querySelector('.logo');
        if (navbar && logo) {
            if (window.innerWidth < 992) {
                navbar.classList.remove('scrolled');
                logo.classList.remove('logo-scrolled');
            } else if (window.scrollY > 0) {
                navbar.classList.add('scrolled');
                logo.classList.add('logo-scrolled');
            }
        }
    });

    window.addEventListener('DOMContentLoaded', (event) => {
        const navItems = document.querySelectorAll('nav .nav-items a');
        navItems.forEach(item => {
            if (item.getAttribute('href') === window.location.pathname) {
                item.classList.add('active');
            }
        });
    });
</script>