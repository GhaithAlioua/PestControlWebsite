---
// Imports
import Navbar from '../components/navbar.astro'
import PageUpButton from '../components/pageUpButton.astro'
// import HamburgerButton from '../components/hamburgerMenu.astro'

// Define a default title
let title = Astro.props.title ?? 'PestControl'
// Define whether navbar appears for a page or not
let showNavbar = Astro.props.showNavbar ?? true;
---

<!DOCTYPE html>
<html>
  <head>
    <title>{title}</title>
    <link rel="icon" href="/favicon.png" type="image/png" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
  </head>
  <body class="bg-black">
    {showNavbar && <Navbar />} <!-- Conditionally render the Navbar -->
    <!-- <HamburgerButton /> -->
    <slot /> <!-- This is where the content of your pages will be injected -->
    <!-- <ChatButton /> -->
    <PageUpButton />
  </body>
</html>